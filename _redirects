 /favicon-96x96.png /favicon-96x96.png 200
 /favicon.svg    /favicon.svg     200
 /apple-touch-icon.png /apple-touch-icon.png 200
 /site.webmanifest /site.webmanifest 200
 /robots.txt     /robots.txt      200
 /sitemap.xml    /sitemap.xml     200
 /pgp.txt        /pgp.txt         200
 /mirrors.txt    /mirrors.txt     200
 /canary.txt     /canary.txt      200

